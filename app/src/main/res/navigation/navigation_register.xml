<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_register"
    app:startDestination="@id/genericFragment">

    <fragment
        android:id="@+id/genericFragment"
        android:name="com.ifsc.lages.sti.tcc.ui.register.RegisterGenericInfoFragment"
        tools:layout="@layout/fragment_register_info_generic">
        <action
            android:id="@+id/action_genericFragment_to_registerStudentFragment"
            app:destination="@id/registerStudentFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_genericFragment_to_registerTeacherFragment"
            app:destination="@id/registerTeacherFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>

    </fragment>

    <fragment
        android:id="@+id/registerStudentFragment"
        android:name="com.ifsc.lages.sti.tcc.ui.register.RegisterStudentFragment"
        tools:layout="@layout/fragment_register_student" />

    <fragment
        android:id="@+id/registerTeacherFragment"
        android:name="com.ifsc.lages.sti.tcc.ui.register.RegisterTeacherFragment"
        tools:layout="@layout/fragment_register_teacher">
    </fragment>

</navigation>